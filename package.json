{
  "name": "electron-quick-start-typescript",
  "version": "1.0.0",
  "description": "A minimal Electron application written with Typescript",
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "lint": "eslint -c .eslintrc --ext .ts ./src",
    "pre": "npm run build && npm run tailwind && electron ./dist/main.js",
    "start": "npm run build && electron ./dist/main.js",
    "tailwind": "npx tailwindcss -i ./src/css/tailwind.css -o ./dist/tailwind.css"
  },
  "repository": "https://github.com/ertrii/devernet-desktop",
  "keywords": [
    "typescript",
    "internet"
  ],
  "author": "ertrii",
  "license": "MIT",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.28.1",
    "@typescript-eslint/parser": "^4.28.1",
    "electron": "^17.0.1",
    "eslint": "^7.29.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "prettier": "^2.3.2",
    "typescript": "^4.3.4"
  },
  "dependencies": {
    "daisyui": "^1.6.0"
  }
}
